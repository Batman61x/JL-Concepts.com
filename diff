  <script>
    // Jahr im Footer
    document.getElementById('year').textContent = new Date().getFullYear();

    const flyout = document.getElementById('flyout');
    const burger = document.getElementById('hamburger');
    const closeFlyoutBtn = document.getElementById('closeFlyout');

    function openFlyout(){
      flyout.classList.add('open');
      flyout.setAttribute('aria-hidden','false');
      burger.classList.add('active');
      burger.setAttribute('aria-expanded','true');
      document.body.style.overflow = 'hidden';
    }
    function closeFlyout(){
      flyout.classList.remove('open');
      flyout.setAttribute('aria-hidden','true');
      burger.classList.remove('active');
      burger.setAttribute('aria-expanded','false');
      document.body.style.overflow = '';
    }
    burger.addEventListener('click', () => {
      const open = flyout.classList.contains('open');
      open ? closeFlyout() : openFlyout();
    });
    closeFlyoutBtn.addEventListener('click', closeFlyout);

    // Accordion für Leistungen im Flyout
    const accBtn = document.querySelector('[data-accordion="leistungen"]');
    const accWrap = document.getElementById('submenu-leistungen');
    const accSection = accBtn.closest('.menu-section');
    accBtn.addEventListener('click', () => {
      const expanded = accBtn.getAttribute('aria-expanded') === 'true';
      accBtn.setAttribute('aria-expanded', String(!expanded));
      accSection.setAttribute('aria-expanded', String(!expanded));
      accWrap.style.display = expanded ? 'none' : 'block';
    });

    // Schließen des Flyouts bei Klick auf Link
    document.querySelectorAll('.menu-link, .submenu a').forEach(a=>{
      a.addEventListener('click', closeFlyout);
    });

    // Smooth scroll für interne Links (Fallback für alte Browser)
    document.querySelectorAll('a[href^="#"]').forEach(anchor=>{
      anchor.addEventListener('click', function(e){
        const id = this.getAttribute('href').slice(1);
        const el = document.getElementById(id);
        if(el){ e.preventDefault(); el.scrollIntoView({behavior:'smooth'}); }
      });
    });
  </script>
